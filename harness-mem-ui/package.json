{
  "name": "harness-mem-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build:web",
    "build:web": "vite build",
    "dev": "bun run build:web && bun run src/server.ts",
    "dev:web": "vite",
    "dev:server": "bun run src/server.ts",
    "typecheck": "bunx tsc --noEmit",
    "test:ui": "vitest run",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@playwright/test": "^1.55.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "jsdom": "^26.1.0"
  }
}
